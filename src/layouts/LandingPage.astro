---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
    title: string;
    description: string;
    ogImage?: string;
    navLinks?: Array<{ text: string; href: string }>;
    navCta?: { text: string; href: string };
}

const { 
    title, 
    description, 
    ogImage = '/images/og-default.jpg',
    navLinks,
    navCta
} = Astro.props;

const siteUrl = Astro.site?.toString() || 'https://b2b.websem.ro';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
---

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl}>
    
    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={`${siteUrl}${ogImage}`}>
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:type" content="website">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>
    
    <!-- Fonts - optimized with font-display: swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Orbitron:wght@500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Orbitron:wght@500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
    </noscript>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

    <!-- Theme initialization - prevents flash of incorrect theme (default: dark) -->
    <script is:inline>
        (function() {
            const stored = localStorage.getItem('theme');
            // Default to dark mode unless explicitly set to light
            if (stored === 'light' || (!stored && window.matchMedia('(prefers-color-scheme: light)').matches)) {
                document.documentElement.setAttribute('data-theme', 'light');
            }
            // Dark mode is CSS default, no attribute needed
        })();
    </script>
</head>
<body>
    <Header 
        links={navLinks} 
        ctaText={navCta?.text} 
        ctaHref={navCta?.href} 
    />
    
    <main>
        <slot />
    </main>
    
    <Footer />
</body>
</html>
