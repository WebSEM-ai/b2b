---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BookingModal from '../components/BookingModal.astro';
import '../styles/global.css';

interface RelatedPost {
    slug: string;
    title: string;
    description: string;
    category: string;
    pubDate: Date;
    heroImage?: string;
}

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    heroImageAlt?: string;
    author?: string;
    authorRole?: string;
    authorBio?: string;
    authorImage?: string;
    authorLinkedin?: string;
    authorTwitter?: string;
    category?: string;
    tags?: string[];
    readingTime?: number;
    relatedPosts?: RelatedPost[];
}

const {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    heroImageAlt,
    author = 'WebSEM Team',
    authorRole = 'B2B Growth Experts',
    authorBio = 'Echipa WebSEM ajută companiile B2B să genereze lead-uri calificate prin strategii de marketing digital, outreach personalizat și optimizare AI.',
    authorImage,
    authorLinkedin = 'https://linkedin.com/company/websem',
    authorTwitter,
    category,
    tags = [],
    readingTime,
    relatedPosts = [],
} = Astro.props;

const siteUrl = Astro.site?.toString() || 'https://b2b.websem.ro';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = heroImage || '/images/og-default.jpg';
const currentUrl = Astro.url.href;

// Format dates
const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('ro-RO', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
};

// Format category for display
const formatCategory = (cat: string) => {
    return cat.split('-').map(word =>
        word.charAt(0).toUpperCase() + word.slice(1)
    ).join(' ');
};

// Share URLs
const shareUrls = {
    linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`,
    twitter: `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(title)}`,
    facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`,
};
---

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | WebSEM Blog</title>
    <meta name="description" content={description}>

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl}>

    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={`${siteUrl}${ogImage}`}>
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:type" content="article">
    <meta property="article:published_time" content={pubDate.toISOString()}>
    {updatedDate && <meta property="article:modified_time" content={updatedDate.toISOString()}>}
    <meta property="article:author" content={author}>
    {tags.map(tag => <meta property="article:tag" content={tag}>)}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&family=Orbitron:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">

    <!-- Theme initialization -->
    <script is:inline>
        (function() {
            const stored = localStorage.getItem('theme');
            if (stored === 'light' || (!stored && window.matchMedia('(prefers-color-scheme: light)').matches)) {
                document.documentElement.setAttribute('data-theme', 'light');
            }
        })();
    </script>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": title,
        "description": description,
        "image": `${siteUrl}${ogImage}`,
        "author": {
            "@type": "Organization",
            "name": author
        },
        "publisher": {
            "@type": "Organization",
            "name": "WebSEM",
            "logo": {
                "@type": "ImageObject",
                "url": `${siteUrl}/images/logo.png`
            }
        },
        "datePublished": pubDate.toISOString(),
        "dateModified": (updatedDate || pubDate).toISOString(),
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": canonicalUrl
        }
    })} />
</head>
<body>
    <!-- Reading Progress Bar -->
    <div class="reading-progress" id="reading-progress"></div>

    <Header
        links={[
            { text: 'Acasă', href: '/' },
            { text: 'Blog', href: '/blog' },
            { text: 'Servicii', href: '/#benefits' },
            { text: 'Contact', href: '/#contact' }
        ]}
    />

    <main class="blog-main">
        <!-- Breadcrumbs -->
        <nav class="breadcrumbs">
            <div class="container-wide">
                <a href="/">Acasă</a>
                <span class="sep">/</span>
                <a href="/blog">Blog</a>
                {category && (
                    <>
                        <span class="sep">/</span>
                        <a href={`/blog/category/${category}`}>{formatCategory(category)}</a>
                    </>
                )}
            </div>
        </nav>

        <!-- Article Header -->
        <header class="article-header">
            <div class="container">
                {category && (
                    <a href={`/blog/category/${category}`} class="category-badge">
                        {formatCategory(category)}
                    </a>
                )}
                <h1>{title}</h1>
                <p class="description">{description}</p>

                <div class="meta">
                    <div class="author-mini">
                        <div class="avatar">
                            {authorImage ? (
                                <img src={authorImage} alt={author} />
                            ) : (
                                <span>{author.charAt(0)}</span>
                            )}
                        </div>
                        <div class="info">
                            <span class="name">{author}</span>
                            <span class="date">
                                {formatDate(pubDate)}
                                {readingTime && ` · ${readingTime} min citire`}
                            </span>
                        </div>
                    </div>

                    <div class="share">
                        <span class="share-label">Share:</span>
                        <a href={shareUrls.linkedin} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on LinkedIn">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                        <a href={shareUrls.twitter} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on X">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                        </a>
                        <a href={shareUrls.facebook} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on Facebook">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Hero Image -->
        {heroImage && (
            <div class="hero-image">
                <div class="container">
                    <img src={heroImage} alt={heroImageAlt || title} />
                </div>
            </div>
        )}

        <!-- Main Content Area with TOC -->
        <div class="article-layout">
            <!-- Table of Contents - Sidebar -->
            <aside class="toc-sidebar" id="toc-sidebar">
                <div class="toc-container">
                    <h4 class="toc-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                            <path d="M4 6h16M4 12h16M4 18h10"/>
                        </svg>
                        Cuprins
                    </h4>
                    <nav class="toc-nav" id="toc-nav">
                        <!-- Populated by JavaScript -->
                    </nav>
                </div>
            </aside>

            <!-- Article Content -->
            <article class="article-content" id="article-content">
                <div class="content-wrapper">
                    <slot />
                </div>

                <!-- Tags -->
                {tags.length > 0 && (
                    <div class="article-tags">
                        <span class="label">Tags:</span>
                        {tags.map(tag => (
                            <a href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag">
                                #{tag}
                            </a>
                        ))}
                    </div>
                )}

                <!-- Author Box -->
                <div class="author-box">
                    <div class="author-box-avatar">
                        {authorImage ? (
                            <img src={authorImage} alt={author} />
                        ) : (
                            <div class="avatar-placeholder">
                                <span>{author.charAt(0)}</span>
                            </div>
                        )}
                    </div>
                    <div class="author-box-content">
                        <div class="author-box-header">
                            <div>
                                <span class="author-box-label">Autor</span>
                                <h3 class="author-box-name">{author}</h3>
                                <span class="author-box-role">{authorRole}</span>
                            </div>
                            <div class="author-box-social">
                                {authorLinkedin && (
                                    <a href={authorLinkedin} target="_blank" rel="noopener noreferrer" title="LinkedIn">
                                        <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                        </svg>
                                    </a>
                                )}
                                {authorTwitter && (
                                    <a href={authorTwitter} target="_blank" rel="noopener noreferrer" title="Twitter/X">
                                        <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                                        </svg>
                                    </a>
                                )}
                            </div>
                        </div>
                        <p class="author-box-bio">{authorBio}</p>
                    </div>
                </div>
            </article>
        </div>

        <!-- Related Posts -->
        {relatedPosts.length > 0 && (
            <section class="related-posts">
                <div class="container-wide">
                    <div class="related-header">
                        <h2>Articole similare</h2>
                        <p>Continuă să citești despre {category ? formatCategory(category) : 'subiecte relevante'}</p>
                    </div>
                    <div class="related-grid">
                        {relatedPosts.slice(0, 3).map(post => (
                            <article class="related-card">
                                <a href={`/blog/${post.slug}`} class="related-image">
                                    {post.heroImage ? (
                                        <img src={post.heroImage} alt={post.title} loading="lazy" />
                                    ) : (
                                        <div class="related-placeholder">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="32" height="32">
                                                <path d="M19 3H5a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2V5a2 2 0 00-2-2z"/>
                                                <circle cx="8.5" cy="8.5" r="1.5"/>
                                                <path d="M21 15l-5-5L5 21"/>
                                            </svg>
                                        </div>
                                    )}
                                </a>
                                <div class="related-content">
                                    <span class="related-category">{formatCategory(post.category)}</span>
                                    <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                                    <p>{post.description}</p>
                                    <a href={`/blog/${post.slug}`} class="related-link">
                                        Citește articolul
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
                                            <path d="M5 12h14M12 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </article>
                        ))}
                    </div>
                </div>
            </section>
        )}

        <!-- CTA -->
        <section class="article-cta">
            <div class="container">
                <div class="cta-content">
                    <h2>Vrei rezultate similare pentru business-ul tău?</h2>
                    <p>Solicită un audit gratuit și află cum putem genera €250K+ pipeline în 90 de zile.</p>
                    <a href="javascript:void(0)" class="cta-btn" id="blog-cta-btn">
                        Solicită Audit Gratuit
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
            </div>
        </section>
    </main>

    <Footer />
    <BookingModal />

    <script>
        // Reading Progress
        const progressBar = document.getElementById('reading-progress');
        const content = document.getElementById('article-content');

        window.addEventListener('scroll', () => {
            if (!content || !progressBar) return;
            const rect = content.getBoundingClientRect();
            const start = rect.top + window.scrollY - window.innerHeight;
            const end = rect.bottom + window.scrollY - window.innerHeight;
            const progress = Math.min(100, Math.max(0, ((window.scrollY - start) / (end - start)) * 100));
            progressBar.style.width = `${progress}%`;
        });

        // Generate Table of Contents
        function generateTOC() {
            const article = document.getElementById('article-content');
            const tocNav = document.getElementById('toc-nav');
            if (!article || !tocNav) return;

            const headings = article.querySelectorAll('h2, h3');
            if (headings.length === 0) {
                document.getElementById('toc-sidebar')?.classList.add('hidden');
                return;
            }

            const tocList = document.createElement('ul');

            headings.forEach((heading, index) => {
                // Add ID to heading if not present
                if (!heading.id) {
                    heading.id = `heading-${index}`;
                }

                const li = document.createElement('li');
                li.className = heading.tagName === 'H3' ? 'toc-h3' : 'toc-h2';

                const a = document.createElement('a');
                a.href = `#${heading.id}`;
                a.textContent = heading.textContent || '';
                a.addEventListener('click', (e) => {
                    e.preventDefault();
                    heading.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    history.pushState(null, '', `#${heading.id}`);
                });

                li.appendChild(a);
                tocList.appendChild(li);
            });

            tocNav.appendChild(tocList);

            // Highlight active heading on scroll
            const observerOptions = {
                rootMargin: '-80px 0px -80% 0px',
                threshold: 0
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    const id = entry.target.id;
                    const tocLink = tocNav.querySelector(`a[href="#${id}"]`);
                    if (tocLink) {
                        if (entry.isIntersecting) {
                            tocNav.querySelectorAll('a').forEach(a => a.classList.remove('active'));
                            tocLink.classList.add('active');
                        }
                    }
                });
            }, observerOptions);

            headings.forEach(heading => observer.observe(heading));
        }

        generateTOC();

        // CTA Button
        document.getElementById('blog-cta-btn')?.addEventListener('click', () => {
            document.getElementById('booking-modal')?.classList.add('active');
            document.body.classList.add('modal-open');
        });

        // Sticky TOC behavior
        const tocSidebar = document.getElementById('toc-sidebar');
        const articleLayout = document.querySelector('.article-layout');

        if (tocSidebar && articleLayout) {
            const observer = new IntersectionObserver(
                ([entry]) => {
                    if (!entry.isIntersecting) {
                        tocSidebar.classList.add('is-sticky');
                    } else {
                        tocSidebar.classList.remove('is-sticky');
                    }
                },
                { rootMargin: '-100px 0px 0px 0px' }
            );
            observer.observe(articleLayout);
        }
    </script>
</body>
</html>

<style>
    .reading-progress {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--accent) 0%, var(--accent-light) 100%);
        width: 0%;
        z-index: 1001;
        transition: width 0.1s ease;
    }

    .blog-main {
        padding-top: 80px;
        min-height: 100vh;
        background: var(--bg-primary);
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .container-wide {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Breadcrumbs */
    .breadcrumbs {
        padding: 1rem 0;
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-light);
        font-size: 0.85rem;
    }

    .breadcrumbs .container-wide {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .breadcrumbs a {
        color: var(--text-tertiary);
        text-decoration: none;
        transition: color 0.2s;
    }

    .breadcrumbs a:hover {
        color: var(--accent-light);
    }

    .breadcrumbs .sep {
        color: var(--text-muted);
    }

    /* Article Header */
    .article-header {
        padding: 3rem 0 2rem;
        text-align: center;
        background: var(--bg-secondary);
    }

    .category-badge {
        display: inline-block;
        padding: 0.35rem 0.9rem;
        background: var(--bg-input);
        border: 1px solid var(--border-accent);
        border-radius: 50px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--accent-light);
        text-decoration: none;
        margin-bottom: 1.25rem;
        transition: all 0.2s;
    }

    .category-badge:hover {
        background: var(--bg-input-focus);
    }

    .article-header h1 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: clamp(1.75rem, 5vw, 2.5rem);
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .article-header .description {
        font-size: 1.1rem;
        color: var(--text-tertiary);
        line-height: 1.6;
        margin-bottom: 2rem;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-light);
        flex-wrap: wrap;
        gap: 1rem;
        max-width: 700px;
        margin: 0 auto;
    }

    .author-mini {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .avatar {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent), var(--accent-light));
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: #fff;
        overflow: hidden;
    }

    .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .author-mini .info {
        text-align: left;
    }

    .author-mini .name {
        display: block;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .author-mini .date {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .share {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .share-label {
        font-size: 0.8rem;
        color: var(--text-muted);
        margin-right: 0.25rem;
    }

    .share-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        background: var(--bg-input);
        border: 1px solid var(--border-light);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-tertiary);
        transition: all 0.2s;
    }

    .share-btn:hover {
        background: var(--bg-input-focus);
        color: var(--accent-light);
        border-color: var(--border-accent);
        transform: translateY(-2px);
    }

    /* Hero Image */
    .hero-image {
        padding: 2rem 0;
        background: var(--bg-primary);
    }

    .hero-image img {
        width: 100%;
        height: auto;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        box-shadow: var(--shadow-lg);
    }

    /* Article Layout with TOC */
    .article-layout {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
    }

    /* Table of Contents */
    .toc-sidebar {
        position: relative;
    }

    .toc-sidebar.hidden {
        display: none;
    }

    .toc-container {
        position: sticky;
        top: 100px;
        max-height: calc(100vh - 120px);
        overflow-y: auto;
        padding: 1.5rem;
        background: var(--bg-card);
        border: 1px solid var(--border-light);
        border-radius: 12px;
    }

    .toc-title {
