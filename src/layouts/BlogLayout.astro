---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BookingModal from '../components/BookingModal.astro';
import '../styles/global.css';

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    heroImageAlt?: string;
    author?: string;
    category?: string;
    tags?: string[];
    readingTime?: number;
}

const {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    heroImageAlt,
    author = 'WebSEM Team',
    category,
    tags = [],
    readingTime,
} = Astro.props;

const siteUrl = Astro.site?.toString() || 'https://b2b.websem.ro';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = heroImage || '/images/og-default.jpg';
const currentUrl = Astro.url.href;

// Format dates
const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('ro-RO', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
};

// Format category for display
const formatCategory = (cat: string) => {
    return cat.split('-').map(word =>
        word.charAt(0).toUpperCase() + word.slice(1)
    ).join(' ');
};

// Share URLs
const shareUrls = {
    linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`,
    twitter: `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(title)}`,
    facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`,
};
---

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | WebSEM Blog</title>
    <meta name="description" content={description}>

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl}>

    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={`${siteUrl}${ogImage}`}>
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:type" content="article">
    <meta property="article:published_time" content={pubDate.toISOString()}>
    {updatedDate && <meta property="article:modified_time" content={updatedDate.toISOString()}>}
    <meta property="article:author" content={author}>
    {tags.map(tag => <meta property="article:tag" content={tag}>)}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&family=Orbitron:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">

    <!-- Theme initialization -->
    <script is:inline>
        (function() {
            const stored = localStorage.getItem('theme');
            if (stored === 'light' || (!stored && window.matchMedia('(prefers-color-scheme: light)').matches)) {
                document.documentElement.setAttribute('data-theme', 'light');
            }
        })();
    </script>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": title,
        "description": description,
        "image": `${siteUrl}${ogImage}`,
        "author": {
            "@type": "Organization",
            "name": author
        },
        "publisher": {
            "@type": "Organization",
            "name": "WebSEM",
            "logo": {
                "@type": "ImageObject",
                "url": `${siteUrl}/images/logo.png`
            }
        },
        "datePublished": pubDate.toISOString(),
        "dateModified": (updatedDate || pubDate).toISOString(),
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": canonicalUrl
        }
    })} />
</head>
<body>
    <!-- Reading Progress Bar -->
    <div class="reading-progress" id="reading-progress"></div>

    <Header
        links={[
            { text: 'Acasă', href: '/' },
            { text: 'Blog', href: '/blog' },
            { text: 'Servicii', href: '/#benefits' },
            { text: 'Contact', href: '/#contact' }
        ]}
    />

    <main class="blog-main">
        <!-- Breadcrumbs -->
        <nav class="breadcrumbs">
            <div class="container">
                <a href="/">Acasă</a>
                <span class="sep">/</span>
                <a href="/blog">Blog</a>
                {category && (
                    <>
                        <span class="sep">/</span>
                        <a href={`/blog/category/${category}`}>{formatCategory(category)}</a>
                    </>
                )}
                <span class="sep">/</span>
                <span class="current">{title.length > 50 ? title.substring(0, 50) + '...' : title}</span>
            </div>
        </nav>

        <!-- Article Header -->
        <header class="article-header">
            <div class="container">
                {category && (
                    <a href={`/blog/category/${category}`} class="category-badge">
                        {formatCategory(category)}
                    </a>
                )}
                <h1>{title}</h1>
                <p class="description">{description}</p>

                <div class="meta">
                    <div class="author">
                        <div class="avatar">{author.charAt(0)}</div>
                        <div class="info">
                            <span class="name">{author}</span>
                            <span class="date">
                                {formatDate(pubDate)}
                                {readingTime && ` · ${readingTime} min citire`}
                            </span>
                        </div>
                    </div>

                    <div class="share">
                        <a href={shareUrls.linkedin} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on LinkedIn">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                        <a href={shareUrls.twitter} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on X">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                        </a>
                        <a href={shareUrls.facebook} target="_blank" rel="noopener noreferrer" class="share-btn" title="Share on Facebook">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Hero Image -->
        {heroImage && (
            <div class="hero-image">
                <div class="container">
                    <img src={heroImage} alt={heroImageAlt || title} />
                </div>
            </div>
        )}

        <!-- Article Content -->
        <article class="article-content">
            <div class="container">
                <div class="content-wrapper">
                    <slot />
                </div>
            </div>
        </article>

        <!-- Tags -->
        {tags.length > 0 && (
            <div class="article-tags">
                <div class="container">
                    <span class="label">Tags:</span>
                    {tags.map(tag => (
                        <a href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag">
                            #{tag}
                        </a>
                    ))}
                </div>
            </div>
        )}

        <!-- Author Box -->
        <div class="author-box-wrapper">
            <div class="container">
                <div class="author-box">
                    <div class="author-box-avatar">
                        <span>{author.charAt(0)}</span>
                    </div>
                    <div class="author-box-content">
                        <span class="author-box-label">Autor</span>
                        <h3 class="author-box-name">{author}</h3>
                        <p class="author-box-bio">Echipa WebSEM ajută companiile B2B să genereze lead-uri calificate prin strategii de marketing digital, outreach personalizat și optimizare AI.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA -->
        <section class="article-cta">
            <div class="container">
                <h2>Vrei rezultate similare pentru business-ul tău?</h2>
                <p>Solicită un audit gratuit și află cum putem genera €250K+ pipeline în 90 de zile.</p>
                <a href="javascript:void(0)" class="cta-btn" id="blog-cta-btn">
                    Solicită Audit Gratuit
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </section>
    </main>

    <Footer />
    <BookingModal />

    <script>
        // Reading Progress
        const progressBar = document.getElementById('reading-progress');
        const content = document.querySelector('.article-content');

        window.addEventListener('scroll', () => {
            if (!content || !progressBar) return;
            const rect = content.getBoundingClientRect();
            const start = rect.top + window.scrollY - window.innerHeight;
            const end = rect.bottom + window.scrollY - window.innerHeight;
            const progress = Math.min(100, Math.max(0, ((window.scrollY - start) / (end - start)) * 100));
            progressBar.style.width = `${progress}%`;
        });

        // CTA Button
        document.getElementById('blog-cta-btn')?.addEventListener('click', () => {
            document.getElementById('booking-modal')?.classList.add('active');
            document.body.classList.add('modal-open');
        });
    </script>
</body>
</html>

<style>
    .reading-progress {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--accent) 0%, var(--accent-light) 100%);
        width: 0%;
        z-index: 1001;
        transition: width 0.1s ease;
    }

    .blog-main {
        padding-top: 90px;
        min-height: 100vh;
        background: var(--bg-primary);
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Breadcrumbs */
    .breadcrumbs {
        padding: 1rem 0;
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-light);
        font-size: 0.85rem;
    }

    .breadcrumbs .container {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
        max-width: 800px;
    }

    .breadcrumbs a {
        color: var(--text-tertiary);
        text-decoration: none;
        transition: color 0.2s;
    }

    .breadcrumbs a:hover {
        color: var(--accent-light);
    }

    .breadcrumbs .sep {
        color: var(--text-muted);
    }

    .breadcrumbs .current {
        color: var(--text-muted);
    }

    /* Article Header */
    .article-header {
        padding: 3rem 0 2rem;
        text-align: center;
        background: var(--bg-secondary);
    }

    .category-badge {
        display: inline-block;
        padding: 0.35rem 0.9rem;
        background: var(--bg-input);
        border: 1px solid var(--border-accent);
        border-radius: 50px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--accent-light);
        text-decoration: none;
        margin-bottom: 1.25rem;
    }

    .article-header h1 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: clamp(1.75rem, 5vw, 2.5rem);
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .article-header .description {
        font-size: 1.1rem;
        color: var(--text-tertiary);
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-light);
        flex-wrap: wrap;
        gap: 1rem;
    }

    .author {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .avatar {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent), var(--accent-light));
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: #fff;
    }

    .author .info {
        text-align: left;
    }

    .author .name {
        display: block;
        font-weight: 500;
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .author .date {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .share {
        display: flex;
        gap: 0.5rem;
    }

    .share-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        background: var(--bg-input);
        border: 1px solid var(--border-light);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-tertiary);
        transition: all 0.2s;
    }

    .share-btn:hover {
        background: var(--bg-input-focus);
        color: var(--accent-light);
        border-color: var(--border-accent);
    }

    /* Hero Image */
    .hero-image {
        padding: 2rem 0;
        background: var(--bg-primary);
    }

    .hero-image img {
        width: 100%;
        height: auto;
        border-radius: 12px;
        border: 1px solid var(--border-light);
    }

    /* Article Content */
    .article-content {
        padding: 2rem 0 3rem;
        background: var(--bg-primary);
    }

    .content-wrapper {
        font-size: 1.05rem;
        line-height: 1.8;
        color: var(--text-secondary);
    }

    .content-wrapper :global(h2) {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.6rem;
        font-weight: 700;
        margin: 2.5rem 0 1rem;
        color: var(--text-primary);
    }

    .content-wrapper :global(h3) {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.25rem;
        font-weight: 600;
        margin: 2rem 0 0.75rem;
        color: var(--text-primary);
    }

    .content-wrapper :global(p) {
        margin-bottom: 1.5rem;
    }

    .content-wrapper :global(a) {
        color: var(--accent-light);
        text-decoration: underline;
        text-underline-offset: 2px;
    }

    .content-wrapper :global(a:hover) {
        color: var(--accent);
    }

    .content-wrapper :global(ul),
    .content-wrapper :global(ol) {
        margin: 1.5rem 0;
        padding-left: 1.5rem;
    }

    .content-wrapper :global(li) {
        margin-bottom: 0.5rem;
    }

    /* Blockquotes - stilizate cu iconița de citat */
    .content-wrapper :global(blockquote) {
        position: relative;
        border-left: 4px solid var(--accent);
        padding: 1.5rem 1.5rem 1.5rem 2rem;
        margin: 2rem 0;
        background: linear-gradient(135deg, var(--bg-card) 0%, var(--bg-input) 100%);
        border-radius: 0 12px 12px 0;
        font-style: italic;
        color: var(--text-secondary);
    }

    .content-wrapper :global(blockquote)::before {
        content: '"';
        position: absolute;
        top: -10px;
        left: 10px;
        font-size: 4rem;
        font-family: Georgia, serif;
        color: var(--accent);
        opacity: 0.3;
        line-height: 1;
    }

    .content-wrapper :global(blockquote p:last-child) {
        margin-bottom: 0;
    }

    /* Code inline */
    .content-wrapper :global(code) {
        background: var(--bg-input);
        padding: 0.2rem 0.5rem;
        border-radius: 6px;
        font-size: 0.88em;
        font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
        color: var(--accent-light);
        border: 1px solid var(--border-light);
    }

    /* Code blocks - cu header și design îmbunătățit */
    .content-wrapper :global(pre) {
        position: relative;
        background: var(--bg-tertiary);
        border: 1px solid var(--border-light);
        border-radius: 12px;
        padding: 0;
        overflow: hidden;
        margin: 2rem 0;
    }

    .content-wrapper :global(pre)::before {
        content: '';
        display: block;
        height: 40px;
        background: var(--bg-input);
        border-bottom: 1px solid var(--border-light);
        position: relative;
    }

    .content-wrapper :global(pre)::after {
        content: '• • •';
        position: absolute;
        top: 12px;
        left: 16px;
        font-size: 0.8rem;
        letter-spacing: 4px;
        color: var(--text-muted);
    }

    .content-wrapper :global(pre code) {
        display: block;
        background: none;
        padding: 1.25rem;
        border: none;
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.6;
        overflow-x: auto;
    }

    /* Tabele - design profesional cu rânduri alternante */
    .content-wrapper :global(table) {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 2rem 0;
        font-size: 0.95rem;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--border-light);
        box-shadow: var(--shadow-sm);
    }

    .content-wrapper :global(th),
    .content-wrapper :global(td) {
        padding: 1rem 1.25rem;
        text-align: left;
        border-bottom: 1px solid var(--border-light);
    }

    .content-wrapper :global(th) {
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
        font-weight: 600;
        color: #ffffff;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.05em;
    }

    .content-wrapper :global(tr:nth-child(even)) {
        background: var(--bg-card);
    }

    .content-wrapper :global(tr:hover) {
        background: var(--bg-input);
    }

    .content-wrapper :global(tr:last-child td) {
        border-bottom: none;
    }

    .content-wrapper :global(td:first-child) {
        font-weight: 500;
        color: var(--text-primary);
    }

    .content-wrapper :global(hr) {
        border: none;
        border-top: 1px solid var(--border-light);
        margin: 3rem 0;
    }

    .content-wrapper :global(strong) {
        color: var(--text-primary);
        font-weight: 600;
    }

    /* Tags */
    .article-tags {
        padding: 1.5rem 0;
        border-top: 1px solid var(--border-light);
        background: var(--bg-primary);
    }

    .article-tags .container {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .article-tags .label {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    .tag {
        padding: 0.35rem 0.75rem;
        background: var(--bg-input);
        border: 1px solid var(--border-light);
        border-radius: 50px;
        font-size: 0.8rem;
        color: var(--text-tertiary);
        text-decoration: none;
        transition: all 0.2s;
    }

    .tag:hover {
        background: var(--bg-input-focus);
        border-color: var(--border-accent);
        color: var(--accent-light);
    }

    /* Author Box */
    .author-box-wrapper {
        padding: 2rem 0;
        background: var(--bg-primary);
    }

    .author-box {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        background: var(--bg-card);
        border: 1px solid var(--border-light);
        border-radius: 16px;
    }

    .author-box-avatar {
        flex-shrink: 0;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent), var(--accent-light));
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .author-box-avatar span {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
    }

    .author-box-content {
        flex: 1;
    }

    .author-box-label {
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--accent-light);
    }

    .author-box-name {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0.25rem 0 0.75rem;
    }

    .author-box-bio {
        font-size: 0.95rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    @media (max-width: 640px) {
        .author-box {
            flex-direction: column;
            text-align: center;
            align-items: center;
        }
    }

    /* CTA */
    .article-cta {
        padding: 4rem 0;
        background: var(--bg-secondary);
        text-align: center;
    }

    .article-cta h2 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: var(--text-primary);
    }

    .article-cta p {
        color: var(--text-tertiary);
        margin-bottom: 1.5rem;
    }

    .cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.9rem 1.75rem;
        background: var(--accent);
        color: #fff;
        font-weight: 600;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s;
    }

    .cta-btn:hover {
        background: var(--accent-dark);
        transform: translateY(-2px);
    }

