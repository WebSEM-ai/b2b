---
import { getCollection } from 'astro:content';
import LandingPage from '../../layouts/LandingPage.astro';

// Get all blog posts, excluding drafts in production
const allPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date (newest first)
const posts = allPosts.sort((a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// Get featured posts
const featuredPosts = posts.filter(post => post.data.featured);
const regularPosts = posts.filter(post => !post.data.featured);

// Format date helper
const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('ro-RO', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
};

// Calculate reading time
const getReadingTime = (body: string) => {
    const wordCount = body.split(/\s+/).length;
    return Math.ceil(wordCount / 200);
};

// Format category for display
const formatCategory = (category: string) => {
    return category.split('-').map(word =>
        word.charAt(0).toUpperCase() + word.slice(1)
    ).join(' ');
};
---

<LandingPage
    title="Blog | WebSEM - B2B Lead Generation & AI Marketing Insights"
    description="Articole și ghiduri despre B2B lead generation, SEO, LLM optimization și email outreach. Strategii dovedite pentru creșterea pipeline-ului."
    navLinks={[
        { text: 'Acasă', href: '/' },
        { text: 'Blog', href: '/blog' },
        { text: 'Servicii', href: '/#benefits' },
        { text: 'Contact', href: '/#contact' }
    ]}
>
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label="Breadcrumb">
        <div class="breadcrumbs-container">
            <ol>
                <li><a href="/">Acasă</a></li>
                <li aria-current="page">Blog</li>
            </ol>
        </div>
    </nav>

    <section class="blog-hero">
        <div class="blog-hero-content">
            <span class="hero-label">Resurse & Insights</span>
            <h1>Blog WebSEM</h1>
            <p>Strategii dovedite pentru B2B lead generation, SEO și marketing digital</p>
        </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
        <section class="featured-section">
            <div class="section-container">
                <div class="section-header">
                    <h2 class="section-title">Articole Recomandate</h2>
                    <div class="section-line"></div>
                </div>
                <div class="featured-grid">
                    {featuredPosts.slice(0, 2).map(post => (
                        <article class="featured-card">
                            <a href={`/blog/${post.slug}`} class="featured-image">
                                {post.data.heroImage ? (
                                    <img src={post.data.heroImage} alt={post.data.heroImageAlt || post.data.title} loading="lazy" />
                                ) : (
                                    <div class="placeholder-image">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                            <path d="M19 3H5a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2V5a2 2 0 00-2-2z"/>
                                            <circle cx="8.5" cy="8.5" r="1.5"/>
                                            <path d="M21 15l-5-5L5 21"/>
                                        </svg>
                                    </div>
                                )}
                                <div class="featured-overlay">
                                    <span class="read-label">Citește articolul</span>
                                </div>
                            </a>
                            <div class="featured-content">
                                <div class="post-meta">
                                    <a href={`/blog/category/${post.data.category}`} class="post-category">
                                        {formatCategory(post.data.category)}
                                    </a>
                                    <span class="meta-separator">•</span>
                                    <span class="post-reading-time">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"/>
                                            <path d="M12 6v6l4 2"/>
                                        </svg>
                                        {post.data.readingTime || getReadingTime(post.body)} min
                                    </span>
                                </div>
                                <h3>
                                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                                </h3>
                                <p class="post-description">{post.data.description}</p>
                                <div class="post-footer">
                                    <div class="author-info">
                                        <div class="author-avatar">
                                            <span>{post.data.author?.charAt(0) || 'W'}</span>
                                        </div>
                                        <div class="author-details">
                                            <span class="author-name">{post.data.author || 'WebSEM Team'}</span>
                                            <span class="post-date">{formatDate(post.data.pubDate)}</span>
                                        </div>
                                    </div>
                                    <a href={`/blog/${post.slug}`} class="read-more" aria-label={`Citește ${post.data.title}`}>
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M5 12h14M12 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>
    )}

    <!-- All Posts -->
    <section class="posts-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Toate Articolele</h2>
                <div class="section-line"></div>
            </div>

            {posts.length > 0 ? (
                <div class="posts-grid">
                    {(featuredPosts.length > 0 ? regularPosts : posts).map(post => (
                        <article class="post-card">
                            <a href={`/blog/${post.slug}`} class="post-image">
                                {post.data.heroImage ? (
                                    <img src={post.data.heroImage} alt={post.data.heroImageAlt || post.data.title} loading="lazy" />
                                ) : (
                                    <div class="placeholder-image">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                            <path d="M19 3H5a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2V5a2 2 0 00-2-2z"/>
                                            <circle cx="8.5" cy="8.5" r="1.5"/>
                                            <path d="M21 15l-5-5L5 21"/>
                                        </svg>
                                    </div>
                                )}
                            </a>
                            <div class="post-content">
                                <div class="post-meta">
                                    <a href={`/blog/category/${post.data.category}`} class="post-category">
                                        {formatCategory(post.data.category)}
                                    </a>
                                    <span class="meta-separator">•</span>
                                    <span class="post-reading-time">
                                        {post.data.readingTime || getReadingTime(post.body)} min citire
                                    </span>
                                </div>
                                <h3>
                                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                                </h3>
                                <p class="post-description">{post.data.description}</p>
                                <div class="post-footer">
                                    <span class="post-date">{formatDate(post.data.pubDate)}</span>
                                    <a href={`/blog/${post.slug}`} class="read-link">
                                        Citește
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M5 12h14M12 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            ) : (
                <div class="no-posts">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M9 12h6m-3-3v6m-7 4h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <p>Nu există articole încă. Revin curând cu conținut nou!</p>
                </div>
            )}
        </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="newsletter-section">
        <div class="newsletter-container">
            <div class="newsletter-content">
                <h2>Rămâi la curent cu cele mai noi strategii</h2>
                <p>Primește direct în inbox articole despre B2B lead generation, SEO și marketing AI.</p>
            </div>
            <a href="/contact" class="newsletter-btn">
                Contactează-ne
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    </section>
</LandingPage>

