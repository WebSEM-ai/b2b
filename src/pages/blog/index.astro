---
import { getCollection } from 'astro:content';
import LandingPage from '../../layouts/LandingPage.astro';

// Get all blog posts, excluding drafts in production
const allPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date (newest first)
const posts = allPosts.sort((a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// Get featured posts
const featuredPosts = posts.filter(post => post.data.featured);
const regularPosts = posts.filter(post => !post.data.featured);

// Format date helper
const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('ro-RO', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    }).format(date);
};
---

<LandingPage
    title="Blog | WebSEM - B2B Lead Generation Insights"
    description="Articole și ghiduri despre B2B lead generation, sales intelligence, și email outreach. Strategii dovedite pentru creșterea pipeline-ului."
>
    <section class="blog-hero">
        <div class="blog-hero-content">
            <h1>Blog</h1>
            <p>Insights și strategii pentru B2B lead generation</p>
        </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
        <section class="featured-section">
            <div class="section-container">
                <h2 class="section-title">Articole Recomandate</h2>
                <div class="featured-grid">
                    {featuredPosts.slice(0, 2).map(post => (
                        <article class="featured-card">
                            {post.data.heroImage && (
                                <a href={`/blog/${post.slug}`} class="featured-image">
                                    <img src={post.data.heroImage} alt={post.data.heroImageAlt || post.data.title} loading="lazy">
                                </a>
                            )}
                            <div class="featured-content">
                                <div class="post-meta">
                                    <span class="post-category">{post.data.category}</span>
                                    <span class="post-date">{formatDate(post.data.pubDate)}</span>
                                </div>
                                <h3>
                                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                                </h3>
                                <p>{post.data.description}</p>
                                <a href={`/blog/${post.slug}`} class="read-more">
                                    Citește articolul
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M5 12h14M12 5l7 7-7 7"/>
                                    </svg>
                                </a>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>
    )}

    <!-- All Posts -->
    <section class="posts-section">
        <div class="section-container">
            <h2 class="section-title">Toate Articolele</h2>
            <div class="posts-grid">
                {regularPosts.map(post => (
                    <article class="post-card">
                        {post.data.heroImage && (
                            <a href={`/blog/${post.slug}`} class="post-image">
                                <img src={post.data.heroImage} alt={post.data.heroImageAlt || post.data.title} loading="lazy">
                            </a>
                        )}
                        <div class="post-content">
                            <div class="post-meta">
                                <span class="post-category">{post.data.category}</span>
                                <span class="post-date">{formatDate(post.data.pubDate)}</span>
                            </div>
                            <h3>
                                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                            </h3>
                            <p>{post.data.description}</p>
                        </div>
                    </article>
                ))}
            </div>

            {posts.length === 0 && (
                <div class="no-posts">
                    <p>Nu există articole încă. Revin curând cu conținut nou!</p>
                </div>
            )}
        </div>
    </section>
</LandingPage>

<style>
    .blog-hero {
        padding: 8rem 2rem 4rem;
        text-align: center;
        background: linear-gradient(180deg, rgba(99, 102, 241, 0.1) 0%, transparent 100%);
    }

    .blog-hero h1 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .blog-hero p {
        font-size: 1.15rem;
        color: var(--gray-400);
    }

    .section-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .section-title {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Featured Section */
    .featured-section {
        padding: 3rem 0;
    }

    .featured-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    .featured-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .featured-card:hover {
        border-color: rgba(99, 102, 241, 0.3);
        transform: translateY(-4px);
    }

    .featured-image {
        display: block;
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .featured-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .featured-card:hover .featured-image img {
        transform: scale(1.05);
    }

    .featured-content {
        padding: 1.5rem;
    }

    .featured-content h3 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.35rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        line-height: 1.3;
    }

    .featured-content h3 a {
        color: var(--white);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .featured-content h3 a:hover {
        color: var(--accent-light);
    }

    .featured-content p {
        color: var(--gray-400);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 1.25rem;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--accent-light);
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .read-more svg {
        width: 16px;
        height: 16px;
        transition: transform 0.3s ease;
    }

    .read-more:hover {
        color: var(--white);
    }

    .read-more:hover svg {
        transform: translateX(4px);
    }

    /* Posts Section */
    .posts-section {
        padding: 3rem 0 6rem;
    }

    .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .post-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .post-card:hover {
        border-color: rgba(99, 102, 241, 0.3);
        transform: translateY(-4px);
    }

    .post-image {
        display: block;
        aspect-ratio: 16/10;
        overflow: hidden;
    }

    .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .post-card:hover .post-image img {
        transform: scale(1.05);
    }

    .post-content {
        padding: 1.25rem;
    }

    .post-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 0.75rem;
    }

    .post-category {
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--accent-light);
        background: rgba(99, 102, 241, 0.15);
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
    }

    .post-date {
        font-size: 0.8rem;
        color: var(--gray-500);
    }

    .post-content h3 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .post-content h3 a {
        color: var(--white);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .post-content h3 a:hover {
        color: var(--accent-light);
    }

    .post-content p {
        color: var(--gray-400);
        font-size: 0.9rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .no-posts {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--gray-500);
    }

    @media (max-width: 1024px) {
        .featured-grid {
            grid-template-columns: 1fr;
        }

        .posts-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
