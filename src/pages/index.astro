---
import LandingPage from '../layouts/LandingPage.astro';
import Hero from '../components/Hero.astro';
import ClientsCarousel from '../components/ClientsCarousel.astro';
import BenefitsSection from '../components/BenefitsSection.astro';
import StatsSection from '../components/StatsSection.astro';
import VendorFailures from '../components/VendorFailures.astro';
import FeaturesSection from '../components/FeaturesSection.astro';
import CapabilitiesSection from '../components/CapabilitiesSection.astro';
import CtaSection from '../components/CtaSection.astro';
import BookingModal from '../components/BookingModal.astro';

// Page metadata
const pageTitle = "WebSEM | B2B Lead Intelligence";
const pageDescription = "Pipeline B2B de €250K+ în 90 de zile. Identificăm decision-makers cu buget. Livrăm meetings cu VP+ din companii €10M+ revenue.";
---

<LandingPage title={pageTitle} description={pageDescription}>

    <!-- Hero Section -->
    <Hero />

    <!-- Clients Logo Carousel -->
    <ClientsCarousel />

    <!-- Benefits Section - Why companies choose AlphaGrade -->
    <BenefitsSection />

    <!-- Stats Section - Proven Results -->
    <StatsSection />

    <!-- Vendor Failures - Why others failed -->
    <VendorFailures />

    <!-- Features Section - AlphaGrade Advantages -->
    <FeaturesSection />

    <!-- Capabilities Section -->
    <CapabilitiesSection />

    <!-- CTA Section -->
    <CtaSection />

    <!-- Booking Modal -->
    <BookingModal />

</LandingPage>
