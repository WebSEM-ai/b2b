---
interface Props {
    badge?: string;
    title: string;
    titleAccent?: string;
    subtitle?: string;
    formAction?: string;
    stats?: Array<{
        value: string;
        label: string;
        position?: 'left' | 'right';
    }>;
}

const { 
    badge,
    title, 
    titleAccent,
    subtitle,
    formAction = '#',
    stats = []
} = Astro.props;

const leftStats = stats.filter(s => s.position === 'left');
const rightStats = stats.filter(s => s.position === 'right');
