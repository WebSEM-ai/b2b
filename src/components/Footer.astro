---
interface Props {
    companyName?: string;
    email?: string;
    phone?: string;
    address?: string;
    links?: Array<{
        text: string;
        href: string;
    }>;
}

const { 
    companyName = 'WebSEM',
    email = 'office@websem.ro',
    phone = '0760.60.48.49',
    address = 'B-dul Unirii 25-27, București',
    links = [
        { text: 'Disclaimer', href: '/disclaimer' },
        { text: 'Termeni și condiții', href: '/termeni' },
        { text: 'Politica de cookies', href: '/cookies' },
        { text: 'Politica de confidențialitate', href: '/confidentialitate' }
    ]
} = Astro.props;

const year = new Date().getFullYear();
---

<footer>
    <div class="footer-container">
        <div class="footer-main">
            <div class="footer-brand">
                <a href="/" class="logo">Web<span>SEM</span></a>
                <p class="footer-tagline">Digital Marketing Agency | SEO BRILLIANTLY™</p>
            </div>
            
            <div class="footer-contact">
                <div class="contact-item">
                    <span class="contact-label">Email:</span>
                    <a href={`mailto:${email}`}>{email}</a>
                </div>
                <div class="contact-item">
                    <span class="contact-label">Telefon:</span>
                    <a href={`tel:${phone.replace(/\D/g, '')}`}>{phone}</a>
                </div>
                <div class="contact-item">
                    <span class="contact-label">Adresă:</span>
                    <span>{address}</span>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p class="copyright">© {year} {companyName}. Toate drepturile rezervate.</p>
            <div class="footer-links">
                {links.map(link => (
                    <a href={link.href}>{link.text}</a>
                ))}
            </div>
        </div>
    </div>
</footer>

<style>
    footer {
        background: rgba(0, 0, 0, 0.5);
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding: 3rem 2rem 2rem;
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .footer-main {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        margin-bottom: 2rem;
    }

    .footer-brand .logo {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        text-decoration: none;
        color: var(--white);
    }

    .footer-brand .logo span {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .footer-tagline {
        margin-top: 0.5rem;
        font-size: 0.85rem;
        color: var(--gray-500);
    }

    .footer-contact {
        display: flex;
        gap: 2rem;
    }

    .contact-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .contact-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--gray-500);
    }

    .contact-item a,
    .contact-item span:not(.contact-label) {
        color: var(--gray-300);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .contact-item a:hover {
        color: var(--accent-light);
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .copyright {
        font-size: 0.8rem;
        color: var(--gray-500);
    }

    .footer-links {
        display: flex;
        gap: 1.5rem;
    }

    .footer-links a {
        color: var(--gray-500);
        text-decoration: none;
        font-size: 0.8rem;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--white);
    }

    @media (max-width: 900px) {
        .footer-main {
            flex-direction: column;
            gap: 2rem;
        }

        .footer-contact {
            flex-direction: column;
            gap: 1rem;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .footer-links {
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
        }
    }
</style>
